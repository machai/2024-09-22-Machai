      "type": "store",
      "name": "Store",
      "settings": [
        {
          "type": "text",
          "id": "store_name",
          "label": "Store Name"
        },
        {
          "type": "text",
          "id": "store_lat",
          "label": "Latitude"
        },
        {
          "type": "text",
          "id": "store_lng",
          "label": "Longitude"
        },
        {
          "type": "image_picker",
          "id": "store_icon",
          "label": "Store Icon"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Default",
      "category": "Custom"
    }
  ]
}
{% endschema %}
