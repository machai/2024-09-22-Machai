{{ 'section-image.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="image image--{{ section.settings.image_alignment }}{% if section.settings.full_width %} content-container--full-width{% else %} page-width{% endif %} section-{{ section.id }}-padding">
   <div class="image__media-item image__media-item--{{ section.settings.desktop_image_width }}">
      <div class="image__media image__media--{{ section.settings.height }} gradient color-{{ section.settings.color_scheme }} global-media-settings {% if section.settings.image != blank %}media{% else %}image__media--placeholder placeholder{% endif %}"
        {% if section.settings.height == 'adapt' and section.settings.image != blank %} style="padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;"{% endif %}
      >
        {%- if section.settings.image != blank -%}
          {%- capture sizes -%}(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2){%- endcapture -%}
          {{ section.settings.image | image_url: width: 1500 | image_tag:
            loading: 'lazy',
            sizes: sizes,
            widths: '165, 360, 535, 750, 1070, 1500'
          }}
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
    </div>
</div>

{% schema %}
{
  "name": "t:sections.image.name",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "t:sections.image.settings.image.label"
    },
    {
      "type": "select",
      "id": "height",
      "options": [
        {
          "value": "adapt",
          "label": "t:sections.image.settings.height.options__1.label"
        },
        {
          "value": "small",
          "label": "t:sections.image.settings.height.options__2.label"
        },
        {
          "value": "large",
          "label": "t:sections.image.settings.height.options__3.label"
        }
      ],
      "default": "adapt",
      "label": "t:sections.image.settings.height.label"
    },
    {
      "type": "select",
      "id": "desktop_image_width",
      "options": [
        {
          "value": "small",
          "label": "t:sections.image.settings.desktop_image_width.options__1.label"
        },
        {
          "value": "medium",
          "label": "t:sections.image.settings.desktop_image_width.options__2.label"
        },
        {
          "value": "large",
          "label": "t:sections.image.settings.desktop_image_width.options__3.label"
        },
        {
          "value": "full",
          "label": "t:sections.image.settings.desktop_image_width.options__4.label"
        }
      ],
      "default": "full",
      "label": "t:sections.image.settings.desktop_image_width.label",
      "info": "t:sections.image.settings.desktop_image_width.info"
    },
    {
      "type": "select",
      "id": "image_alignment",
      "options": [
          {
            "value": "left",
            "label": "t:sections.image.settings.image_alignment.options__1.label"
          },
          {
            "value": "center",
            "label": "t:sections.image.settings.image_alignment.options__2.label"
          },
          {
            "value": "right",
            "label": "t:sections.image.settings.image_alignment.options__3.label"
          }
        ],
        "default": "center",
        "label": "t:sections.image.settings.image_alignment.label"
    },
    {
      "type": "checkbox",
      "id": "full_width",
      "default": true,
      "label": "t:sections.image.settings.full_width.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "t:sections.image.presets.name"
    }
  ]
}
{% endschema %}
